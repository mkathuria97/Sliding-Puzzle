<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientcolor"
    tools:context="com.example.mayankkathuria.puzzle.Settings">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <TextView
        android:id="@+id/slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Slide "
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/sizeRadioGroup"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1" />

    <RadioGroup
        android:id="@+id/slideRadioGroup"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide"
        app:layout_constraintHorizontal_bias="0.75">

        <RadioButton
            android:id="@+id/motionSensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Motion Sensors"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:onClick="onSlideRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Click"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:onClick="onSlideRadioButtonClicked"/>
    </RadioGroup>

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.1" />

        <RadioGroup
            android:id="@+id/sizeRadioGroup"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17dp"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/size">

            <RadioButton
                android:id="@+id/size3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:onClick="onRadioButtonClicked"
                android:text="3"
                android:buttonTint="@android:color/black"/>

            <RadioButton
                android:id="@+id/size4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:onClick="onRadioButtonClicked"
                android:text="4"
                android:buttonTint="@android:color/black"/>
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
